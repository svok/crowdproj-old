<?xml version='1.0' encoding='utf-8'?>
<widget id="com.crowdproj.app" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>CrowdProj</name>
    <description>
        CrowdProj service for crowd projecting and united works on superprojects.
    </description>
    <author email="sokatov@gmail.com" href="http://crowdproj.com">
        Sergey Okatov
    </author>
    <content src="index.html" />
    <hook src="scripts/appBeforeBuild.sh" type="before_build" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <plugin name="cordova-plugin-whitelist" spec="*" />
    <engine name="android" spec="*" />
</widget>
